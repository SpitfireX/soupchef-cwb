cwb-encode -d cwb/data/chefkoch/ -R cwb/registry/chefkoch -f chefkoch.vrt -c utf8 -xsB -S corpus:0 -S s:0+id -S recipe:0+title+id+url+author+date+yearmonth+year+rating+category+keywords+related+ingredients -S comment:0+id+parent+author+date+yearmonth+year+datetime_orig

cwb-make -r cwb/registry/ -M 500 -V CHEFKOCH

python merge.py -i output/xml/recipes/ -o output/recipes.vrt

cwb-encode -d cwb/data/chefkoch/ -R cwb/registry/chefkoch -f output/recipes.vrt -c utf8 -xsB -S s:0+id -S recipe:0+title+id+url+author+date+yearmonth+year+rating+category+keywords+related+ingredients -P pos

python merge.py -i output/xml/comments/ -o output/comments.vrt --trim

cwb-encode -d cwb/data/chefkoch_comments/ -R cwb/registry/chefkoch_comments -f output/comments.vrt -c utf8 -xsB -S s:0+id -S comment:0+id+parent+author+date+yearmonth+year+datetime_orig -P pos